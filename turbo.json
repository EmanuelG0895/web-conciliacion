{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "NODE_ENV",
        "SEGUROS_DOMAIN",
        "ALLOWED_ORIGINS",
        "HOME_DOMAIN",
        "BACKOFFICE_DOMAIN",
        "BASE_URL"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "DOCS_DOMAIN",
        "BACKOFFICE_DOMAIN",
        "BASE_URL",
        "ALLOWED_ORIGINS"
      ]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts", 
        "test/**/*.tsx",
        "test/**/*.ts",
        "**/*.test.tsx",
        "**/*.test.ts",
        "**/*.spec.tsx", 
        "**/*.spec.ts",
        "jest.config.js",
        "jest.setup.js"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}